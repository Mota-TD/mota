# API配置 - 直接调用 API Gateway
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# 应用配置
NEXT_PUBLIC_APP_NAME=Mota
NEXT_PUBLIC_APP_VERSION=1.0.0

# 认证配置
NEXT_PUBLIC_AUTH_COOKIE_NAME=mota_token
NEXT_PUBLIC_AUTH_COOKIE_EXPIRES=7

# 功能开关
NEXT_PUBLIC_ENABLE_AI=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_OFFLINE=true

# 第三方服务
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GA_ID=

# 文件上传配置
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.md

# 分页配置
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100
FROM eclipse-temurin:21-jre-alpine

LABEL maintainer="Mota Team"
LABEL description="Mota User Service - ç”¨æˆ·ç®¡ç†æœåŠ¡"

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# è®¾ç½®æ—¶åŒº
ENV TZ=Asia/Shanghai
RUN apk add --no-cache tzdata && \
    cp /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

# åˆ›å»ºérootç”¨æˆ·
RUN addgroup -g 1000 mota && \
    adduser -u 1000 -G mota -s /bin/sh -D mota

# å¤åˆ¶jaråŒ?
COPY target/mota-user-service-*.jar app.jar

# è®¾ç½®æƒé™
RUN chown -R mota:mota /app

# åˆ‡æ¢åˆ°érootç”¨æˆ·
USER mota

# æš´éœ²ç«¯å£
EXPOSE 8082

# JVMå‚æ•°
ENV JAVA_OPTS="-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200"

# å¥åº·æ£€æŸ?
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD wget -q --spider http://localhost:8082/actuator/health || exit 1

# å¯åŠ¨å‘½ä»¤
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -Djava.security.egd=file:/dev/./urandom -jar app.jar"]

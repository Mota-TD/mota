# =====================================================
# Mota 环境变量配置示例
# 复制此文件为 .env 并修改相应配置
# =====================================================

# =====================================================
# 基础配置
# =====================================================
# 部署环境: dev, test, prod
DEPLOY_ENV=prod

# 项目名称
COMPOSE_PROJECT_NAME=mota

# 时区
TZ=Asia/Shanghai

# =====================================================
# 域名配置
# =====================================================
# API 域名
API_DOMAIN=api.mota.com

# Web 域名
WEB_DOMAIN=www.mota.com

# 管理后台域名
ADMIN_DOMAIN=admin.mota.com

# =====================================================
# MySQL 配置
# =====================================================
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=mota
MYSQL_USER=mota
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_HOST=mysql
MYSQL_PORT=3306

# =====================================================
# Redis 配置
# =====================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# =====================================================
# Nacos 配置
# =====================================================
NACOS_SERVER=nacos:8848
NACOS_NAMESPACE=
NACOS_GROUP=DEFAULT_GROUP
NACOS_USERNAME=nacos
NACOS_PASSWORD=your_nacos_password_here

# =====================================================
# Kafka 配置
# =====================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181

# =====================================================
# Elasticsearch 配置
# =====================================================
ES_HOST=elasticsearch
ES_PORT=9200
ES_USERNAME=elastic
ES_PASSWORD=your_es_password_here

# =====================================================
# Milvus 配置
# =====================================================
MILVUS_HOST=milvus
MILVUS_PORT=19530

# =====================================================
# MinIO 配置
# =====================================================
MINIO_ROOT_USER=mota_admin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=your_access_key_here
MINIO_SECRET_KEY=your_secret_key_here

# =====================================================
# JWT 配置
# =====================================================
JWT_SECRET=your_jwt_secret_key_must_be_at_least_256_bits_long_for_security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =====================================================
# AI 服务配置
# =====================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# 通义千问
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 文心一言
WENXIN_API_KEY=your_wenxin_api_key_here
WENXIN_SECRET_KEY=your_wenxin_secret_key_here

# Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =====================================================
# 邮件配置
# =====================================================
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_USERNAME=noreply@mota.com
MAIL_PASSWORD=your_mail_password_here
MAIL_FROM=Mota <noreply@mota.com>

# =====================================================
# 短信配置
# =====================================================
SMS_ACCESS_KEY=your_sms_access_key_here
SMS_SECRET_KEY=your_sms_secret_key_here
SMS_SIGN_NAME=Mota
SMS_TEMPLATE_CODE=SMS_123456789

# =====================================================
# 监控配置
# =====================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# =====================================================
# SSL 证书配置
# =====================================================
# 证书类型: letsencrypt, custom
SSL_CERT_TYPE=letsencrypt

# Let's Encrypt 邮箱
LETSENCRYPT_EMAIL=admin@mota.com

# 自定义证书路径（当 SSL_CERT_TYPE=custom 时使用）
SSL_CERT_PATH=/etc/nginx/ssl/mota.com.pem
SSL_KEY_PATH=/etc/nginx/ssl/mota.com.key

# =====================================================
# 日志配置
# =====================================================
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_MAX_HISTORY=30

# =====================================================
# 资源限制配置
# =====================================================
# Gateway
GATEWAY_MEMORY_LIMIT=512m
GATEWAY_CPU_LIMIT=0.5

# 微服务
SERVICE_MEMORY_LIMIT=1g
SERVICE_CPU_LIMIT=1.0

# MySQL
MYSQL_MEMORY_LIMIT=2g
MYSQL_CPU_LIMIT=2.0

# Redis
REDIS_MEMORY_LIMIT=1g
REDIS_CPU_LIMIT=1.0

# Elasticsearch
ES_MEMORY_LIMIT=2g
ES_CPU_LIMIT=2.0
ES_JAVA_OPTS=-Xms1g -Xmx1g
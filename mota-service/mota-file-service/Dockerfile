FROM eclipse-temurin:21-jre-alpine

LABEL maintainer="mota"
LABEL description="Mota File Service - æ–‡ä»¶ä¸Šä¼ ã€åˆ†ç‰‡ä¸Šä¼ ã€æ–­ç‚¹ç»­ä¼ ã€ç§’ä¼ ã€é¢„è§ˆã€ç¼©ç•¥å›¾"

# è®¾ç½®æ—¶åŒº
ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# å®‰è£…å¿…è¦å·¥å…·
RUN apk add --no-cache curl

# åˆ›å»ºåº”ç”¨ç›®å½•
WORKDIR /app

# åˆ›å»ºérootç”¨æˆ·
RUN addgroup -g 1000 mota && adduser -u 1000 -G mota -s /bin/sh -D mota

# å¤åˆ¶jaråŒ?
COPY target/*.jar app.jar

# åˆ›å»ºä¸´æ—¶ç›®å½•å’Œæ—¥å¿—ç›®å½?
RUN mkdir -p /app/logs /app/temp && chown -R mota:mota /app

# åˆ‡æ¢åˆ°érootç”¨æˆ·
USER mota

# æš´éœ²ç«¯å£
EXPOSE 8090

# å¥åº·æ£€æŸ?
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8090/actuator/health || exit 1

# JVMå‚æ•°
ENV JAVA_OPTS="-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -Djava.security.egd=file:/dev/./urandom"

# å¯åŠ¨å‘½ä»¤
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]
